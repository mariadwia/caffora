{
  "name": "caffora/app",
  "description": "Caffora Web Application â€” Customer, Karyawan, Admin Panel, API Backend",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": "^8.1",
    "phpmailer/phpmailer": "^6.10",
    "vlucas/phpdotenv": "^5.6"
  },
  "require-dev": {
    "laravel/pint": "^1.20",
    "larastan/larastan": "^2.0",
    "phpunit/phpunit": "^10.5"
  },
  "autoload": {
    "psr-4": {
      "Caffora\\": "backend/"
    },
    "files": [
      "backend/helpers.php"
    ]
